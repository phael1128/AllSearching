<?xml version="1.0" encoding="utf-8"?>


                                                       
                                                   

    
                 
                       
                                                                      
           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_image_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" android:tag="layout/item_image_result_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <ImageView
            android:id="@+id/iv_thumnail"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:tag="binding_1"     
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="16dp"
            android:fontFamily="@font/spoqa_han_sans_bold"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintTop_toTopOf="@+id/iv_thumnail"
            app:layout_constraintStart_toEndOf="@id/iv_thumnail"
            app:layout_constraintBottom_toTopOf="@+id/tv_date"
            app:layout_constraintEnd_toStartOf="@+id/iv_image_type"
            tools:text="기사"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="binding_2"        
            android:fontFamily="@font/spoqa_han_sans_regular"
            app:layout_constraintTop_toBottomOf="@+id/tv_type"
            app:layout_constraintStart_toStartOf="@+id/tv_type"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="2022-01-01"/>

        <ImageView
            android:id="@+id/iv_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iv_non_favorite"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/iv_image_type"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_photo"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@id/iv_favorite"
            app:layout_constraintBottom_toBottomOf="@id/iv_favorite"
            app:layout_constraintEnd_toStartOf="@+id/iv_favorite"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
         